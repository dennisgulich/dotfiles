
alias l="ls -lash"      # List in long format, include dotfiles
alias ld="ls -ld */"    # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias ts='date +%s'
alias updatedb='sudo /usr/libexec/locate.updatedb'

alias grep='grep --color=auto'

# apps

alias lime='open -a "/Applications/Sublime Text.app"'
alias cask='brew cask'

# logs

alias error_log='tail -f /var/log/apache2/error_log'
alias access_log='tail -f /var/log/apache2/access_log'

# flow

alias flow='npm run-script flow'

# react native

alias rn='react-native'
alias run-ios='react-native run-ios --simulator "iPhone 5s"'
alias run-android='react-native run-android'

# docker

alias drma='docker rm $(docker ps -aq)'
alias drmia='docker rmi $(docker images -q)'
alias dc='docker-compose'
alias dm='docker-machine'